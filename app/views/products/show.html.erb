<%= render "layouts/breadcrumbs" %>
<div class="site-content_wrap container">
  <div id="product-order-placeholder"></div>
  <div id="order-result-placeholder"></div>
  <div class="row">
    <div id="primary" class="col-xs-12 col-lg-9 col-lg-push-3">
      <main id="main" class="site-main" role="main">
        <div id="woo-primary" class="content-area willard">
          <div id="woo-main" class="site-main" role="main">
            <div id="product-215" class="post-215 product type-product status-publish has-post-thumbnail hentry product_shipping_class-class-2 has-thumb swiper-slide">
              <%= form_for @product, url: products_path do |f|%>
                <div class="row single_product_wrapper">

                  <!-- image -->
                  <div class="col-xl-5 col-md-12 col-sm-12 col-xs-12">
                    <div class="single-image-container">
                      <%= render "image_detail" %>
                    </div>
                  </div>

                  <!-- detail -->
                  <div class="col-xl-7 col-md-12 col-sm-12 col-xs-12">
                    <div class="summary entry-summary">
                      <span class="posted_in">
                        <% @product.categories.each do |category| %>
                          <%= link_to "#{category.name} ", products_path(category_id: category.id), rel: "tag" %>
                        <% end %>
                      </span>

                      <h1 class="product_title entry-title">
                        <%= @product.name %>
                      </h1>

                      <div class="product_meta">
                        <span class="sku_wrapper">Tình trạng: <span class="product-status" itemprop="sku">Còn hàng</span></span>
                        <span class="sku_wrapper">Mã sản phẩm: <span class="sku" itemprop="sku"><%= @product.model %></span></span>
                      </div>

                      <p class="price">
                        <span class="woocs_price_code" data-product-id="215">
                          <% if @product.discount_price_currency.present? %>
                            <del>
                              <span class="woocommerce-Price-amount amount"><%= @product.price_currency %>
                                <span class="woocommerce-Price-currencySymbol">₫</span>
                              </span>
                            </del>
                            <ins>
                              <span class="woocommerce-Price-amount amount"><%= @product.discount_price_currency %>
                                <span class="woocommerce-Price-currencySymbol">₫</span>
                              </span>
                            </ins>
                          <% else %>
                            <span class="woocommerce-Price-amount amount"><%= @product.price_currency %>
                              <span class="woocommerce-Price-currencySymbol">₫</span>
                            </span>
                          <% end %>
                        </span>
                      </p>

                      <div class="message">
                          <p>Để nhận được giá tốt nhất Quý khách vui lòng
                            <strong>"LIÊN HỆ"</strong> với số điện thoại phía trên hoặc click vào
                            <strong>"MUA"</strong> phía dưới.
                          </p>
                      </div>

                      <div class="woocommerce-product-details__short-description">
                        <p>Hãng sản xuất: <%= @product.brand.name %></p>
                      </div>

                      <div class="woocommerce-product-details__short-description">
                        <p><%= @product.short_description %></p>
                      </div>

                      <form class="cart" method="post" enctype="multipart/form-data" data-product_id="215" data-product_variations="[hash_array]" current-image="">
                        <div class="custom-cart-button">
                          <div class="">
                            <%= link_to "MUA", order_product_path(@product), remote: true, rel: "nofollow",
                              "data-product-id": @product.id, class: "single_add_to_cart_button button alt custom-button" %>
                          </div>
                        </div>
                      </form>
                    </div>
                    <!-- .summary -->
                  </div>
                </div>
                <%= render "description" %>
                <%= render "related_products_sidebar" %>
              <% end %>
            </div>
            <!-- #product-215 -->
          </div>
        </div>
      </main>
      <!-- #main -->
    </div>
    <!-- #primary -->
    <%= render "left_menu" %>
  </div>
  <!-- .row -->
</div>
