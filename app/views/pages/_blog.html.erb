<div class="container">
  <div class=" row tm_pb_row tm_pb_row_3">
    <div class="tm_pb_column tm_pb_column_4_4  tm_pb_column_5 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 tm_pb_vertical_alligment_start">
      <hr class="tm_pb_module tm_pb_space tm_pb_divider_2">
      <div class="tm_pb_posts tm_pb_posts_0 tm_pb_module" data-atts="" data-page="1" data-pages="4">
        <div class="tm-posts_title_group">
          <h5 class="tm-posts_title">
            <%= link_to "Tin Tá»©c", blogs_path() %>
          </h5>
        </div>
        <div class="tm-posts_listing">
          <div class="row tm-posts_layout-1">
            <% @blogs.each do |blog| %>
              <div class="tm_pb_column col-xl-3 col-lg-3 col-md-6 col-sm-12">
                <div class="tm-posts_item">
                  <div class="tm-posts_item_content_wrap">
                    <%= link_to "#{image_tag(blog.feature_image_thumb_url, alt: blog.feature_image_alt, title: blog.feature_image_title)}".html_safe, blog_path(blog), class: "tm-posts_img" %>
                    <h5 class="tm-posts_item_title">
                      <%= link_to blog.title, blog_path(blog) %>
                    </h5>
                    <div class="tm-posts_item_meta entry-meta">
                      <%= link_to blog.created_at.strftime(Settings.format.created_at), blogs_path(time: blog.time_param[:value]), class: "post__date" %>
                    </div>
                  </div>
                  <div class="posts_item_content_footer">
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- .tm_pb_posts -->
    </div>
    <!-- .tm_pb_column -->
  </div>
  <!-- .tm_pb_row -->
</div>
