<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Chỉnh sửa catalog</h1>
    </div>
  </div>
  <div class="row" id="catalog-new">
    <div class="col-lg-12">
      <div class="panel-body">
        <div class="form-company">
          <div class="form-group">
            <%= render "shared/flash" %>
          </div>
          <%= form_for([:admin, @catalog], url: { action: :update }, html: {multipart: true}) do |f| %>
            <div class="form-group">
              <strong>Ảnh</strong> </br>
              <div class="preview-catalog-image-div">
                <% if %>
                  <%= image_tag @catalog.url, height: 100, class: "preview-catalog-image" %>
                <% else %>
                  <img src="/preview_no_image.jpg" height="150" class="preview-catalog-image">
                <% end %>
              </div>
              <label for="upload-catalog-image" class="btn btn-success">Chọn ảnh</label>
              <%= f.file_field :url, id: "upload-catalog-image", class: "hidden" %>
            </div>
            <div class="form-group">
              <strong>Tiêu đề</strong> </br>
              <%= f.text_area :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Thứ tự</strong> </br>
              <%= f.number_field :home_order, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Desc</strong> </br>
              <%= f.text_area :desc, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Caption</strong> </br>
              <%= f.text_area :caption, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Alt</strong> </br>
              <%= f.text_area :alt, class: "form-control" %>
            </div>
            <div class="form-group">
              <strong>Link</strong> </br>
              <%= f.text_area :link, class: "form-control" %>
            </div>

            <div class="form-group btn-align-center">
              <%= f.submit "Sửa", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
